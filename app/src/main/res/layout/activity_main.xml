<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Gpa_Franciscom3_calculator2.AppBarOverlay">

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="596dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200px"
            android:text="GRADE 1: "
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350px"
            android:text="GRADE 2: "
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="500px"
            android:text="GRADE 3: "
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="650px"
            android:text="GRADE 4: "
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="800px"
            android:text="GRADE 5: "
            android:textSize="40px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="950px"
            android:text="GPA"
            android:textSize="40px" />

        <EditText
            android:id="@+id/e1"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200px"
            android:textSize="40px" />

        <EditText
            android:id="@+id/e2"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350px"
            android:textSize="40px" />

        <EditText
            android:id="@+id/e3"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="500px"
            android:textSize="40px" />

        <EditText
            android:id="@+id/e4"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="650px"
            android:textSize="40px" />

        <EditText
            android:id="@+id/e5"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="800px"
            android:textSize="40px" />

        <TextView
            android:id="@+id/t"
            android:layout_width="300px"
            android:layout_height="120px"
            android:layout_marginTop="950px"
            android:textSize="40px" />

        <Button
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1100px"
            android:text="Compute GPA"
            android:textSize="40px" />

    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_anchor="@+id/appBarLayout"
        app:layout_anchorGravity="center"
        app:popupTheme="@style/Theme.Gpa_Franciscom3_calculator2.PopupOverlay" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:text="GPA FRANCISCOM# CALCULATOR"
        android:textSize="50px"
        android:textStyle="bold"
        app:layout_anchor="@+id/toolbar"
        app:layout_anchorGravity="center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>